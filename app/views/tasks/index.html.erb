<h1>Tasks</h1>
<div><%= link_to "new task", new_task_path  %></div>
<div>
  <ul>
    <% @tasks.each do |task| %>
      <li>
        <%= link_to task.name, task_path(task)  %>
        <%= link_to "🗑️", task, data: { turbo_method: :delete, turbo_confirm: "タスク『#{task.name}』を削除します。よろしいですか？"} %>
      </li>
    <% end %>
  </ul>
</div>
